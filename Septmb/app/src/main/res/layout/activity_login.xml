<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clothes_background"
    tools:context="com.septmb.septmb.septmb.main.RegisterActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/logo4"
            android:layout_marginBottom="40dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="User Email"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:background="@drawable/white_stroke"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:hint="User Password"
            android:textCursorDrawable="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="10dp"
            android:background="@drawable/white_stroke"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="3dp"
            android:background="@drawable/white_stroke">
            <TextView
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Register"
                android:layout_marginRight="140dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Login"
                android:textStyle="bold"
                android:background="@drawable/white_thick_stroke"
                android:layout_marginLeft="100dp"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                />
        </FrameLayout>
    </LinearLayout>
    <com.septmb.septmb.septmb.classes.GifView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progress_gif"/>
</FrameLayout>
