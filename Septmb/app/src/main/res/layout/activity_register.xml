<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clothes_background"
    tools:context="com.septmb.septmb.septmb.main.RegisterActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
        <FrameLayout
            android:id="@+id/userPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <com.septmb.septmb.septmb.utils.CircularImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:onClick="onClickTakePhoto2"
                android:background="@drawable/photo"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera2"
                android:onClick="onClickTakePhoto2"
                android:layout_gravity="bottom|right"/>
        </FrameLayout>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="User Name"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:inputType="textCapWords"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:textCursorDrawable="@color/colorAccent"
            android:background="@drawable/white_stroke"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:hint="User Email"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:background="@drawable/white_stroke"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:inputType="phone"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/phoneicon"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:background="@drawable/white_stroke"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:hint="User Password"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#89ffffff"
            android:textColor="#fff"
            android:background="@drawable/white_stroke"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:background="@drawable/white_stroke">
            <TextView
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Register"
                android:layout_marginRight="100dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/white_thick_stroke"/>
            <TextView
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Login"
                android:layout_marginLeft="140dp"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                />
        </FrameLayout>
    </LinearLayout>
    <com.septmb.septmb.septmb.classes.GifView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress_gif"/>
    <LinearLayout
        android:id="@+id/alert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/yellow_round_fill"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/takePhoto"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Take a Photo"
                android:textSize="18sp"
                android:gravity="center"
                android:onClick="takePhoto"
                android:drawableLeft="@drawable/btn_camera"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="#fff"/>
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:onClick="onClickTakePhotoCancel"
                android:src="@drawable/cancel_icon" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#fccd10"/>
        <TextView
            android:id="@+id/pickfromGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick from Gallery"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableLeft="@drawable/galleryicon"
            android:drawablePadding="5dp"
            android:onClick="fromGallery"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="#fff"/>
    </LinearLayout>

</FrameLayout>
