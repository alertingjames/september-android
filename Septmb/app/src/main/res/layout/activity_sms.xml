<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.septmb.septmb.septmb.main.SMSActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:background="#e8e8e8"
            android:hint="Phone Number"
            android:textStyle="bold"
            android:textColor="#454444"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:id="@+id/add_contact_image_view"
            android:src="@drawable/ic_contacts"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#02b7ff"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:id="@+id/intent"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="#02b7ff"
            android:textStyle="bold"
            android:onClick="openIntent"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/thin_forward"
            android:text="INTENT"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#02d2ff"/>
    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#95e9c1"
        android:layout_margin="3dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="2dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/input"
            android:layout_width="0px"
            android:layout_weight="1"
            android:minLines="3"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#fc8e8d8d"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:hint="Enter message..."
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#027dff"
            android:drawableLeft="@drawable/sendicon"
            android:onClick="onSendClick"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>
