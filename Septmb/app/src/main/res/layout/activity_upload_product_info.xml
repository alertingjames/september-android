<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/clothes_background">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pictureFrame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="30dp"
                android:background="@drawable/white_image_background"
                android:layout_gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_marginTop="10dp"
                        android:layout_height="250dp"
                        android:layout_width="fill_parent"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:id="@+id/netImage" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_height="250dp"
                        android:layout_width="fill_parent"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:id="@+id/imageView1" />
                </FrameLayout>
                <ImageView
                    android:src="@drawable/camera2"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:onClick="onClickTakePhoto2"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:hint="Product Title"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/producticon"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>
            <EditText
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Brand"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/brandicon"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>
            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Gender"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/price"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textColorHint="#abffffff"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/priceicon"
                    android:drawablePadding="10dp"
                    android:textColor="#fff"
                    android:singleLine="false"
                    android:textCursorDrawable="@color/colorAccent"
                    android:background="@drawable/white_stroke"/>
                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="0px"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:text="$"
                    android:gravity="center"
                    android:textColorHint="#abffffff"
                    android:textSize="19sp"
                    android:padding="9dp"
                    android:textColor="#fff"
                    android:singleLine="false"
                    android:textCursorDrawable="@color/colorAccent"
                    android:background="@drawable/white_stroke"/>
            </LinearLayout>
            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Category"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:drawableLeft="@drawable/categoryicon"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:singleLine="false"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>
            <EditText
                android:id="@+id/sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Seller(URL and etc.)"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:drawableLeft="@drawable/sellericon"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:singleLine="false"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>

            <EditText
                android:id="@+id/desctiption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:hint="Description(max. 500 chr)"
                android:textColorHint="#abffffff"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#fff"
                android:singleLine="false"
                android:minLines="3"
                android:drawableLeft="@drawable/descriptionicon"
                android:drawablePadding="10dp"
                android:gravity="start"
                android:textCursorDrawable="@color/colorAccent"
                android:background="@drawable/white_stroke"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83000000"/>
    <LinearLayout
        android:id="@+id/alert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/yellow_round_fill"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/takePhoto"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Take a Photo"
                android:textSize="18sp"
                android:gravity="center"
                android:onClick="takePhoto"
                android:drawableLeft="@drawable/btn_camera"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="#fff"/>
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:onClick="onClickTakePhotoCancel"
                android:src="@drawable/cancel_icon" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#fccd10"/>
        <TextView
            android:id="@+id/pickfromGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick from Gallery"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableLeft="@drawable/galleryicon"
            android:drawablePadding="5dp"
            android:onClick="fromGallery"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="#fff"/>
    </LinearLayout>


    <com.septmb.septmb.septmb.classes.GifView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress_gif"/>
    <FrameLayout
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_button_background"
        android:padding="8dp">
        <ImageView
            android:src="@drawable/uploadbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/currencyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/symbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="28sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/orange_circle_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/symbol2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€"
                android:textSize="28sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/magenda_circle_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/symbol3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="£"
                android:textSize="28sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/blue_circle_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="80dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/symbol4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/green_circle_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cropDialog2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/alert_background"
        android:padding="5dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hint!"
            android:textSize="18sp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/noti"
            android:background="#000"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to crop?"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:background="#818181"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="1dp">
            <Button
                android:id="@+id/yesbutton2"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:onClick="yes2"
                android:layout_marginTop="1dp"
                />
            <Button
                android:id="@+id/nobutton2"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:onClick="no2"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cropDialog3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/alert_background"
        android:padding="5dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hint!"
            android:textSize="18sp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/noti"
            android:background="#000"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to crop?"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:background="#818181"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="1dp">
            <Button
                android:id="@+id/yesbutton3"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:onClick="yes3"
                android:layout_marginTop="1dp"
                />
            <Button
                android:id="@+id/nobutton3"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NO"
                android:onClick="no3"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loadDialog"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/alert_background"
        android:padding="5dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Successfully loaded!"
            android:textSize="18sp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/noti"
            android:background="#000"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="1dp">
            <Button
                android:id="@+id/okayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:onClick="okay"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

